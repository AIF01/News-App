<!DOCTYPE html>
<html lang="en">
<%- include('./components/head.ejs') %>
<body>
    <%- include('./components/nav.ejs') %>
    <div class="main">
        <h1 class="heading">OUR POSTS</h1>
 
        <section>
            <% if (blogs.length > 0) { %>
                <% blogs.forEach(item => { %>
                    <div class="block">
                        <a class="blck" href="/posts/<%= item._id %>">
                            <h2 class="blck">Heading: <%= item.heading %></h2>
                            <h4 class="bloc">Subheading: <%= item.subHeading %></h4>
                            <p class="bloc">Content: <%= item.content %></p>
                        </a>
                    </div>
                    <!-- <p>Date Posted: <%= item.date %></p> -->
                    <!-- <p>Author: <%= item.author %></p><hr> -->
                <% }) %>
            <% } else { %>
                <p>There are no blogs to display...</p>
            <% } %>
        </section>
        <div class="sec">
            
        </div>
    </div>
    <%- include('./components/footer.ejs') %>
</body>
</html>